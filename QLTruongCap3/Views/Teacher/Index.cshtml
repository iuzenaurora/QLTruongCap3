@model QLTruongCap3.Models.GIAOVIEN
@{
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
    ViewBag.Title = "Thông tin cá nhân";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-id-card me-2"></i>THÔNG TIN GIÁO VIÊN</h4>
        </div>
        <div class="card-body p-4">
            <div class="row align-items-center">
                <div class="col-md-4 text-center border-end">
                    <div class="rounded-circle bg-light d-flex justify-content-center align-items-center mx-auto mb-3 shadow-sm"
                         style="width: 150px; height: 150px; border: 4px solid #fff;">
                        <i class="fas fa-chalkboard-teacher text-primary" style="font-size: 70px;"></i>
                    </div>

                    <h4 class="fw-bold text-primary">@Model.HOTEN</h4>
                    <span class="badge bg-secondary mb-2">Mã GV: @Model.MAGV</span>

                    <div>
                        @if (ViewBag.LopCN != null)
                        {
                            <span class="badge bg-success fs-6"><i class="fas fa-star me-1"></i>GVCN Lớp: @ViewBag.LopCN</span>
                        }
                        else
                        {
                            <span class="badge bg-light text-dark border">Không chủ nhiệm lớp</span>
                        }
                    </div>
                </div>

                <div class="col-md-8 ps-md-5">
                    <h5 class="text-uppercase text-muted mb-3 border-bottom pb-2">Thông tin cá nhân</h5>
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th style="width: 160px;"><i class="fas fa-birthday-cake text-info me-2"></i>Ngày sinh:</th>
                                <td>@(Model.NGAYSINH.HasValue ? Model.NGAYSINH.Value.ToString("dd/MM/yyyy") : "Chưa cập nhật")</td>
                            </tr>
                            <tr>
                                <th><i class="fas fa-venus-mars text-info me-2"></i>Giới tính:</th>
                                <td>@Model.GIOITINH</td>
                            </tr>
                            <tr>
                                <th><i class="fas fa-book-reader text-info me-2"></i>Chuyên môn:</th>
                                <td>@Model.CHUYENMON</td>
                            </tr>
                            <tr>
                                <th><i class="fas fa-graduation-cap text-info me-2"></i>Trình độ:</th>
                                <td>@Model.TRINHDOHOCVAN</td>
                            </tr>
                            <tr>
                                <th><i class="fas fa-envelope text-info me-2"></i>Email:</th>
                                <td>@Model.EMAIL</td>
                            </tr>
                            <tr>
                                <th><i class="fas fa-phone text-info me-2"></i>Điện thoại:</th>
                                <td>@Model.DIENTHOAI</td>
                            </tr>
                            <tr>
                                <th><i class="fas fa-map-marker-alt text-info me-2"></i>Địa chỉ:</th>
                                <td>@Model.DIACHI</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="card-footer text-end bg-white">
            <a href="@Url.Action("Index", "Teacher")" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-sync-alt"></i> Tải lại trang
            </a>
        </div>
    </div>
</div>