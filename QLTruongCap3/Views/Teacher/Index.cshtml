@model QLTruongCap3.Models.GIAOVIEN
@{ Layout = "~/Views/Shared/_LayoutTeacher.cshtml"; }

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3>THÔNG TIN GIÁO VIÊN</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center">
                    <img src="[https://via.placeholder.com/150](https://via.placeholder.com/150)" class="rounded-circle mb-3" />
                    <h4>@Model.HOTEN</h4>
                    <p class="text-muted">Mã GV: @Model.MAGV</p>
                </div>
                <div class="col-md-8">
                    <table class="table table-borderless">
                        <tr><th>Ngày sinh:</th><td>@(Model.NGAYSINH.HasValue ? Model.NGAYSINH.Value.ToString("dd/MM/yyyy") : "")</td></tr>
                        <tr><th>Giới tính:</th><td>@Model.GIOITINH</td></tr>
                        <tr><th>Chuyên môn:</th><td>@Model.CHUYENMON</td></tr>
                        <tr><th>Email:</th><td>@Model.EMAIL</td></tr>
                        <tr><th>Số điện thoại:</th><td>@Model.DIENTHOAI</td></tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>