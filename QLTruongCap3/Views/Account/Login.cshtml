@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <title>Đăng nhập hệ thống</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/StyleChung.css" rel="stylesheet" /> <!-- Link file CSS chung -->
</head>
<body class="login-body">
    <!-- Sử dụng class từ Site.css -->
    <div class="login-card">
        <h3 class="text-center login-title text-primary">QUẢN LÝ TRƯỜNG HỌC</h3>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">
                <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
            </div>
        }

        <form action="/Account/Login" method="post">
            <div class="mb-3">
                <label class="form-label fw-bold text-secondary">Tên đăng nhập</label>
                <input type="text" name="username" class="form-control" required placeholder="Nhập tài khoản..." />
            </div>
            <div class="mb-4">
                <label class="form-label fw-bold text-secondary">Mật khẩu</label>
                <input type="password" name="password" class="form-control" required placeholder="Nhập mật khẩu..." />
            </div>
            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold text-uppercase">
                Đăng nhập
            </button>
        </form>

        <div class="text-center mt-3 text-muted" style="font-size: 0.9rem;">
            Hệ thống quản lý trường THPT - Nhóm 7
        </div>
    </div>
</body>
</html>