@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <title>Đăng nhập hệ thống</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #4facfe, #00f2fe);
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-card {
            width: 420px;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
            background: #fff;
            animation: fadeIn 0.8s ease-in-out;
        }

        .login-card h3 {
            font-weight: bold;
            color: #007bff;
        }

        .form-control {
            border-radius: 8px;
        }

        .btn-primary {
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.02);
        }

        .logo {
            display: block;
            margin: 0 auto 20px;
            width: 80px;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>

</head>
<body class="login-body">
    <!-- Sử dụng class từ Site.css -->
    <div class="login-card">
        <img src="https://cdn-icons-png.flaticon.com/512/3135/3135755.png" alt="Logo" class="logo">
        <h3 class="text-center mb-4">QUẢN LÝ TRƯỜNG HỌC</h3>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }
        <form action="/Account/Login" method="post">
            <div class="mb-3">
                <label class="form-label fw-bold">Tên đăng nhập</label>
                <input type="text" name="username" class="form-control" required placeholder="VD: admin hoặc GV001" />
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Mật khẩu</label>
                <input type="password" name="password" class="form-control" required placeholder="Mặc định: ddmmyyyy" />
            </div>
            <button type="submit" class="btn btn-primary w-100">ĐĂNG NHẬP</button>
        </form>
        <div class="text-center mt-3">
            <a href="#" class="text-decoration-none text-muted">Quên mật khẩu?</a>
        </div>
    </div>

</body>
</html>