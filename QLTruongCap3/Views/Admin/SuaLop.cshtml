@model QLTruongCap3.Models.LOP

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Cập Nhật Lớp Học";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h5 class="m-0 font-weight-bold text-white">Cập Nhật Thông Tin Lớp</h5>
                <a href="@Url.Action("QuanLyLop", "Admin")" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.SISO) <!-- Giữ nguyên sĩ số -->

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                        <div class="mb-3 row">
                            <label class="col-md-3 col-form-label fw-bold text-end">Mã Lớp</label>
                            <div class="col-md-9">
                                <!-- Mã lớp là khóa chính, không cho sửa -->
                                @Html.EditorFor(model => model.MALOP, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                <small class="text-muted">Mã lớp không thể thay đổi.</small>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-md-3 col-form-label fw-bold text-end">Tên Lớp <span class="text-danger">*</span></label>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.TENLOP, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TENLOP, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-md-3 col-form-label fw-bold text-end">Khối <span class="text-danger">*</span></label>
                            <div class="col-md-9">
                                @Html.DropDownList("MAKHOI", null, htmlAttributes: new { @class = "form-select" })
                                @Html.ValidationMessageFor(model => model.MAKHOI, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-md-3 col-form-label fw-bold text-end">GV Chủ Nhiệm</label>
                            <div class="col-md-9">
                                @Html.DropDownList("MAGVCN", null, "--- Chọn Giáo Viên ---", htmlAttributes: new { @class = "form-select" })
                                @Html.ValidationMessageFor(model => model.MAGVCN, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-md-3 col-form-label fw-bold text-end">Sĩ Số Hiện Tại</label>
                            <div class="col-md-9 pt-2">
                                <span class="badge bg-info text-dark">@Model.SISO học sinh</span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end pt-3 border-top">
                            <button type="submit" class="btn btn-warning"><i class="fas fa-save"></i> Cập nhật</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>