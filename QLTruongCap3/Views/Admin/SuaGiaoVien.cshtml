@model QLTruongCap3.Models.GIAOVIEN
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center text-warning fw-bold mb-4">✏️ Cập Nhật Thông Tin Giáo Viên</h2>

@using (Html.BeginForm("SuaGiaoVien", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.MAGV)

    <!-- Sử dụng Grid System để cân bằng các input -->
    <div class="row g-3">
        <!-- Hàng 1: Mã GV (4) - Họ Tên (8) -->
        <div class="col-md-4">
            <label class="form-label fw-bold">Mã Giáo Viên</label>
            <!-- Readonly để không sửa mã, bg-light để báo hiệu -->
            <input type="text" class="form-control fw-bold bg-light" value="@Model.MAGV.Trim()" readonly />
        </div>
        <div class="col-md-8">
            @Html.LabelFor(m => m.HOTEN, "Họ Tên", new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.HOTEN, new { @class = "form-control", @required = "required" })
        </div>

        <!-- Hàng 2: Ngày Sinh - Giới Tính - Nơi Sinh -->
        <div class="col-md-4">
            @Html.LabelFor(m => m.NGAYSINH, "Ngày Sinh", new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.NGAYSINH, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        </div>
        <div class="col-md-4">
            @Html.LabelFor(m => m.GIOITINH, "Giới Tính", new { @class = "form-label fw-bold" })
            @Html.DropDownListFor(m => m.GIOITINH, new SelectList(new[] { "Nam", "Nữ" }), "Chọn giới tính", new { @class = "form-select" })
        </div>
        <div class="col-md-4">
            @Html.LabelFor(m => m.NOISINH, "Nơi Sinh", new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.NOISINH, new { @class = "form-control" })
        </div>

        <!-- Hàng 3: Điện Thoại - Email - Địa Chỉ -->
        <div class="col-md-4">
            @Html.LabelFor(m => m.DIENTHOAI, "Điện Thoại", new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.DIENTHOAI, new { @class = "form-control" })
        </div>
        <div class="col-md-4">
            @Html.LabelFor(m => m.EMAIL, "Email", new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.EMAIL, new { @class = "form-control", type = "email" })
        </div>
        <div class="col-md-4">
            @Html.LabelFor(m => m.DIACHI, "Địa Chỉ", new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.DIACHI, new { @class = "form-control" })
        </div>

        <!-- Hàng 4: CCCD - Chuyên Môn - Trình Độ -->
        <div class="col-md-4">
            @Html.LabelFor(m => m.CCCD, "Căn Cước Công Dân", new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.CCCD, new { @class = "form-control" })
        </div>
        <div class="col-md-4">
            @Html.LabelFor(m => m.CHUYENMON, "Chuyên Môn", new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.CHUYENMON, new { @class = "form-control" })
        </div>
        <div class="col-md-4">
            @Html.LabelFor(m => m.TRINHDOHOCVAN, "Trình Độ Học Vấn", new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.TRINHDOHOCVAN, new { @class = "form-control" })
        </div>

        <!-- Hàng 5: Ngày Vào Làm - Trạng Thái -->
        <div class="col-md-4">
            @Html.LabelFor(m => m.NGAYVAOLAM, "Ngày Vào Làm", new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.NGAYVAOLAM, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        </div>
        <div class="col-md-8">
            @Html.LabelFor(m => m.TRANGTHAI, "Trạng Thái", new { @class = "form-label fw-bold" })
            @Html.DropDownListFor(m => m.TRANGTHAI,
                new SelectList(new[] { "Đang làm", "Nghỉ hưu", "Tạm nghỉ" }),
                "Chọn trạng thái", new { @class = "form-select" })
        </div>
    </div>

    <div class="mt-4 text-center">
        <button type="submit" class="btn btn-warning px-4">
            <i class="bi bi-pencil-square"></i> Cập nhật
        </button>
        <a href="@Url.Action("QuanLyGiaoVien", "Admin")" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>
}