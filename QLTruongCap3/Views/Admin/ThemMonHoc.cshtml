@model QLTruongCap3.Models.MONHOC
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center text-success fw-bold mb-4">➕ Thêm Môn Học Mới</h2>

@using (Html.BeginForm("ThemMonHoc", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row g-3 justify-content-center">
        <!-- Mã Môn Học -->
        <div class="col-md-6">
            @Html.LabelFor(m => m.MAMH, "Mã Môn Học (*)", new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.MAMH, new { @class = "form-control", @required = "required", @placeholder = "VD: MH001" })
            @Html.ValidationMessageFor(m => m.MAMH, "", new { @class = "text-danger" })
        </div>

        <!-- Tên Môn Học -->
        <div class="col-md-6">
            @Html.LabelFor(m => m.TENMH, "Tên Môn Học (*)", new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.TENMH, new { @class = "form-control", @required = "required", @placeholder = "VD: Toán học" })
            @Html.ValidationMessageFor(m => m.TENMH, "", new { @class = "text-danger" })
        </div>

        <!-- Hệ Số -->
        <div class="col-md-6">
            @Html.LabelFor(m => m.HESO, "Hệ Số (1-3)", new { @class = "form-label fw-bold" })
            @Html.DropDownListFor(m => m.HESO, new SelectList(new[] { 1, 2, 3 }), new { @class = "form-select" })
            @Html.ValidationMessageFor(m => m.HESO, "", new { @class = "text-danger" })
        </div>

        <!-- Số Tiết -->
        <div class="col-md-6">
            @Html.LabelFor(m => m.SOTIET, "Số Tiết", new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.SOTIET, new { @class = "form-control", type = "number", @min = "1", @required = "required" })
            @Html.ValidationMessageFor(m => m.SOTIET, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mt-4 text-center">
        <button type="submit" class="btn btn-success px-4 fw-bold">
            <i class="bi bi-plus-circle"></i> Thêm Môn Học
        </button>
        <a href="@Url.Action("QuanLyMonHoc", "Admin")" class="btn btn-secondary ms-2 fw-bold">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>
}