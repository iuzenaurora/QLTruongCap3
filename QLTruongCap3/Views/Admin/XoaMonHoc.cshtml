@model QLTruongCap3.Models.MONHOC
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center text-danger fw-bold mb-4">🗑️ Xóa Môn Học</h2>

<div class="alert alert-warning shadow-sm text-center">
    <strong>⚠️ Bạn có chắc chắn muốn xóa môn học này không?</strong>
    <br />
    <span class="text-muted">Hành động này không thể hoàn tác nếu môn học chưa có dữ liệu ràng buộc (Điểm, TKB...).</span>
</div>

<!-- Giữ nguyên dạng bảng theo yêu cầu -->
<div class="table-responsive" style="max-width: 600px; margin: 0 auto;">
    <table class="table table-bordered shadow-sm bg-white">
        <tr>
            <th class="bg-light" style="width: 40%">Mã Môn Học</th>
            <td class="fw-bold text-danger">@Model.MAMH.Trim()</td>
        </tr>
        <tr>
            <th class="bg-light">Tên Môn Học</th>
            <td class="fw-bold">@Model.TENMH</td>
        </tr>
        <tr>
            <th class="bg-light">Hệ Số</th>
            <td>@Model.HESO</td>
        </tr>
        <tr>
            <th class="bg-light">Số Tiết</th>
            <td>@Model.SOTIET</td>
        </tr>
    </table>
</div>

@using (Html.BeginForm("XoaMonHoc", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.MAMH)

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-danger px-4 shadow-sm fw-bold">
            <i class="bi bi-trash"></i> Xác nhận xóa
        </button>
        <a href="@Url.Action("QuanLyMonHoc", "Admin")" class="btn btn-secondary ms-2 shadow-sm fw-bold">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>
}