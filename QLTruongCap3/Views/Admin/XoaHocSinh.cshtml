@model QLTruongCap3.Models.HOCSINH
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center text-danger fw-bold mb-4">🗑️ Xóa Học Sinh</h2>

<div class="alert alert-warning shadow-sm text-center">
    <strong>⚠️ Bạn có chắc chắn muốn xóa học sinh này không?</strong>
    <br />
    <span class="text-muted">Hành động này không thể hoàn tác nếu học sinh chưa có dữ liệu ràng buộc.</span>
</div>

<!-- Giữ nguyên dạng bảng theo yêu cầu -->
<div class="table-responsive" style="max-width: 800px; margin: 0 auto;">
    <table class="table table-bordered shadow-sm bg-white">
        <tr>
            <th class="bg-light" style="width: 30%">Mã Học Sinh</th>
            <td class="fw-bold text-danger">@Model.MAHS.Trim()</td>
        </tr>
        <tr>
            <th class="bg-light">Họ Tên</th>
            <td class="fw-bold">@Model.HO @Model.TEN</td>
        </tr>
        <tr>
            <th class="bg-light">Ngày Sinh</th>
            <td>@string.Format("{0:dd/MM/yyyy}", Model.NGAYSINH)</td>
        </tr>
        <tr>
            <th class="bg-light">Giới Tính</th>
            <td>@Model.GIOITINH</td>
        </tr>
        <tr>
            <th class="bg-light">Điện Thoại</th>
            <td>@Model.DIENTHOAI</td>
        </tr>
        <tr>
            <th class="bg-light">Email</th>
            <td>@Model.EMAIL</td>
        </tr>
        <tr>
            <th class="bg-light">Địa Chỉ</th>
            <td>@Model.DIACHI</td>
        </tr>
        <tr>
            <th class="bg-light">Dân Tộc</th>
            <td>@Model.DANTOC</td>
        </tr>
        <tr>
            <th class="bg-light">Tôn Giáo</th>
            <td>@Model.TONGIAO</td>
        </tr>
        <tr>
            <th class="bg-light">Nơi Sinh</th>
            <td>@Model.NOISINH</td>
        </tr>
        <tr>
            <th class="bg-light">Ngày Nhập Học</th>
            <td>@string.Format("{0:dd/MM/yyyy}", Model.NGAYNHAPHOC)</td>
        </tr>
        <tr>
            <th class="bg-light">Trạng Thái</th>
            <td>@Model.TRANGTHAI</td>
        </tr>
    </table>
</div>

@using (Html.BeginForm("XoaHocSinh", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.MAHS)

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-danger px-4 shadow-sm">
            <i class="bi bi-trash"></i> Xác nhận xóa
        </button>
        <a href="@Url.Action("QuanLyHocSinh", "Admin")" class="btn btn-secondary ms-2 shadow-sm">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>
}