@model QLTruongCap3.Models.MONHOC
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center text-warning fw-bold mb-4">✏️ Cập Nhật Môn Học</h2>

@using (Html.BeginForm("SuaMonHoc", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.MAMH)

    <div class="row g-3 justify-content-center">
        <!-- Mã MH (Readonly) -->
        <div class="col-md-6">
            <label class="form-label fw-bold">Mã Môn Học</label>
            <input type="text" class="form-control fw-bold bg-light" value="@Model.MAMH.Trim()" readonly />
        </div>

        <!-- Tên MH -->
        <div class="col-md-6">
            @Html.LabelFor(m => m.TENMH, "Tên Môn Học", new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.TENMH, new { @class = "form-control", @required = "required" })
        </div>

        <!-- Hệ Số -->
        <div class="col-md-6">
            @Html.LabelFor(m => m.HESO, "Hệ Số (1-3)", new { @class = "form-label fw-bold" })
            @Html.DropDownListFor(m => m.HESO, new SelectList(new[] { 1, 2, 3 }, Model.HESO), new { @class = "form-select" })
        </div>

        <!-- Số Tiết -->
        <div class="col-md-6">
            @Html.LabelFor(m => m.SOTIET, "Số Tiết", new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.SOTIET, new { @class = "form-control", type = "number", @min = "1", @required = "required" })
        </div>
    </div>

    <div class="mt-4 text-center">
        <button type="submit" class="btn btn-warning px-4 fw-bold">
            <i class="bi bi-pencil-square"></i> Cập nhật
        </button>
        <a href="@Url.Action("QuanLyMonHoc", "Admin")" class="btn btn-secondary ms-2 fw-bold">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>
}