@model QLTruongCap3.Models.GIAOVIEN
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center text-danger fw-bold mb-4">🗑️ Xóa Giáo Viên</h2>

<div class="alert alert-warning shadow-sm text-center">
    <strong>⚠️ Bạn có chắc chắn muốn xóa giáo viên này không?</strong>
    <br />
    <span class="text-muted">Hành động này không thể hoàn tác nếu giáo viên chưa có dữ liệu ràng buộc.</span>
</div>

<div class="table-responsive" style="max-width: 800px; margin: 0 auto;">
    <table class="table table-bordered shadow-sm">
        <tr>
            <th class="bg-light" style="width: 30%">Mã Giáo Viên</th>
            <td class="fw-bold text-danger">@Model.MAGV.Trim()</td>
        </tr>
        <tr>
            <th class="bg-light">Họ Tên</th>
            <td class="fw-bold">@Model.HOTEN</td>
        </tr>
        <tr><th>Ngày Sinh</th><td>@string.Format("{0:dd/MM/yyyy}", Model.NGAYSINH)</td></tr>
        <tr><th>Giới Tính</th><td>@Model.GIOITINH</td></tr>
        <tr><th>Điện Thoại</th><td>@Model.DIENTHOAI</td></tr>
        <tr><th>Email</th><td>@Model.EMAIL</td></tr>
        <tr><th>Địa Chỉ</th><td>@Model.DIACHI</td></tr>
        <tr><th>CCCD</th><td>@Model.CCCD</td></tr>
        <tr><th>Chuyên Môn</th><td>@Model.CHUYENMON</td></tr>
        <tr><th>Trình Độ Học Vấn</th><td>@Model.TRINHDOHOCVAN</td></tr>
        <tr><th>Ngày Vào Làm</th><td>@string.Format("{0:dd/MM/yyyy}", Model.NGAYVAOLAM)</td></tr>
        <tr><th>Trạng Thái</th><td>@Model.TRANGTHAI</td></tr>
        <tr><th>Nơi Sinh</th><td>@Model.NOISINH</td></tr>
    </table>
</div>

@using (Html.BeginForm("XacNhanXoaGiaoVien", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.MAGV)

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-danger px-4">
            <i class="bi bi-trash"></i> Xác nhận xóa
        </button>
        <a href="@Url.Action("QuanLyGiaoVien", "Admin")" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>
}